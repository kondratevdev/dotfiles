  default = simple
  autoSetupRemote = true
  followTags = true
[fetch]
  prune = true
  pruneTags = true
  all = true
[user]
  useConfigOnly = true
[diff]
  indentHeuristic = on
  noprefix = true
  colorMoved = default
[rerere]
  enabled = true
