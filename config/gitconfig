  recurse = true
  fetchJobs = 0
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[pull]
  rebase = false
[init]
  defaultBranch = master
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname

# Styling:
[color]
  ui = true
