{
    // Chat
    "chat.commandCenter.enabled": false,
    // Debug
    "debug.allowBreakpointsEverywhere": true,
    "debug.console.closeOnEnd": true,
    "debug.javascript.codelens.npmScripts": "never",
    // Editor
    "editor.autoIndentOnPaste": true,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.cursorBlinking": "solid",
    "editor.cursorWidth": 4,
    "editor.find.addExtraSpaceOnTop": false,
    "editor.fontFamily": "Fira Code, Hack Nerd Font Mono, monospace",
    "editor.fontSize": 14,
    "editor.glyphMargin": false,  // hide breakpoints
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    "editor.hideCursorInOverviewRuler": true,
    "editor.minimap.enabled": false,
    "editor.rulers": [80, 100],
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    // Editorconfig
    "editorconfig.showMenuEntry": false,
    "editorconfig.generateAuto": false,
    // Explorer
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmPasteNative": false,
    // Files
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        ".babelrc": "jsonc",
        ".eslintrc": "jsonc",
        "*.pyi": "python",
        "*.bats": "shellscript",
    },
    "files.exclude": {
        "**/.DS_Store": true,

        "**/node_modules": true,
        "**/bower_components": true,

        "**/__pycache__": true,
        "**/.cache": true,
        "**/.idea": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.venv": true,
        "**/.coverage": true,
        "**/*.py[co]": true,
        "**/htmlcoverage": true,
        "**/docs/build": true
    },
    // Git
    "git.blame.statusBarItem.enabled": false,
    // Pyhton
    "python.analysis.languageServerMode": "default",
    "python.analysis.autoFormatStrings": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.indexing": true,
    "python.analysis.packageIndexDepths": [
        {"name": "", "depth": 4},
    ],
    "python.createEnvironment.trigger": "off",
    "python.experiments.enabled": false,
    // Search
    "search.quickAccess.preserveInput": true,
    "search.quickOpen.history.filterSortOrder": "recency",
    "search.quickOpen.includeSymbols": false,  // NOTE: try both!
    // Security
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.untrustedFiles": "open",
    // Telemetry
    "telemetry.editStats.enabled": false,
    "telemetry.feedback.enabled": false,
    "telemetry.telemetryLevel": "off",
    // Terminal
    "terminal.explorerKind": "external",
    "terminal.external.linuxExec": "hyper",
    "terminal.external.osxExec": "hyper.app",
    // Update
    "update.showReleaseNotes": false,
    // Window
    "window.commandCenter": false,
    "window.newWindowDimensions": "fullscreen",
    "window.zoomLevel": 0.5,
    // Workbench
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "Pycharm Original Theme",
    "workbench.layoutControl.enabled": false,
    "workbench.navigationControl.enabled": false,
    "workbench.quickOpen.preserveInput": false,  // NOTE: try both!
    "workbench.secondarySideBar.defaultVisibility": "hidden",
    "workbench.sideBar.location": "right",
    "workbench.startupEditor": "none",
    "workbench.statusBar.visible": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    }
}
