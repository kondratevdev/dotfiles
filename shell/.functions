#!/usr/bin/env zsh

# `.functions` provides helper functions for shell.


# === Commonly used functions ===

mc() {
  if [ $# -ne 1 ]; then
    echo 'usage: mc <dir-name>'
    return 137
  fi
  # Create a new directory and enter it
  local dir_name="$1"
  mkdir -p "$dir_name" && cd "$dir_name"
}

dev() {
    local dev_dir="$HOME/dev"
    local target_dir="$dev_dir"
    # If an argument is provided, append it to the target directory
    if [ $# -gt 0 ]; then
      target_dir="$dev_dir/$1"
    fi
    cd "$target_dir"
}
