{
  // Cursor
  "cursorpyright.analysis.autoImportCompletions": true,
  "cursorpyright.analysis.useTypingExtensions": true,
  // Debug
  "debug.allowBreakpointsEverywhere": true,
  "debug.console.closeOnEnd": true,
  "debug.javascript.codelens.npmScripts": "never",
  // Editor
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.cursorBlinking": "solid",
  "editor.cursorWidth": 4,
  "editor.find.addExtraSpaceOnTop": false,
  "editor.fontFamily": "Fira Code, Hack Nerd Font Mono, monospace",
  "editor.fontSize": 13,
  "editor.glyphMargin": false,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [80, 100],
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.renderWhitespace": "all",
  "editor.inlayHints.enabled": "off",
  // Editorconfig
  "editorconfig.showMenuEntry": false,
  "editorconfig.generateAuto": false,
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  // Files
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
      ".babelrc": "jsonc",
      ".eslintrc": "jsonc",
      "*.pyi": "python",
      "*.bats": "shellscript"
  },
  "files.exclude": {
      "**/.DS_Store": true,

      "**/node_modules": true,
      "**/bower_components": true,

      "**/__pycache__": true,
      "**/.cache": true,
      "**/.idea": true,
      "**/.pytest_cache": true,
      "**/.mypy_cache": true,
      "**/.venv": true,
      "**/.coverage": true,
      "**/*.py[co]": true,
      "**/htmlcoverage": true,
      "**/docs/build": true
  },
  // Git
  "git.blame.statusBarItem.enabled": false,
  // Python
  "python.createEnvironment.trigger": "off",
  "python.experiments.enabled": false,
  // Search
  "search.quickAccess.preserveInput": true,
  "search.quickOpen.history.filterSortOrder": "recency",
  "search.quickOpen.includeSymbols": false,  // NOTE: try both!
  // Security
  "security.workspace.trust.startupPrompt": "never",
  "security.workspace.trust.untrustedFiles": "open",
  // Telemetry
  "telemetry.feedback.enabled": false,
  // Terminal
  "terminal.explorerKind": "external",
  "terminal.external.linuxExec": "hyper",
  "terminal.external.osxExec": "hyper.app",
  // Update
  "update.showReleaseNotes": false,
  // Window
  "window.commandCenter": false,
  "window.newWindowDimensions": "fullscreen",
  "window.zoomLevel": 0.6,
  // "workbench.colorTheme": "dark-jetbrains-color-theme",
  // "workbench.iconTheme": "jetbrains-file-icon-theme-auto",
  "workbench.colorTheme": "pustota",
  "workbench.iconTheme": "ayu",

  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl.enabled": false,
  "workbench.quickOpen.preserveInput": false,
  "workbench.startupEditor": "none",
  "workbench.editorAssociations": {
      "*.ipynb": "jupyter-notebook"
  },
  "workbench.editor.showTabs": "single",
  "workbench.editor.showIcons": false,
  "workbench.editor.labelFormat": "medium",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.orientation": "vertical",
  // Docker
  "[dockercompose]": {
      "editor.insertSpaces": true,
      "editor.tabSize": 2,
      "editor.autoIndent": "advanced",
      "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
      },
      "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  // GitHub Actions
  "[github-actions-workflow]": {
      "editor.defaultFormatter": "redhat.vscode-yaml"
  },
}
